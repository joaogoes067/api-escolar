generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Responsavel {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  nomeResponsavel String
  email         String   @unique
  password      String
  role          String   @default("user") // "user" ou "admin"
  alunos        Aluno[]  // Relacionamento: um responsável pode ter vários alunos
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Aluno {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  nomeAluno       String
  idade           Int?
  serie           String?
  responsavelId   String      @db.ObjectId
  responsavel     Responsavel @relation(fields: [responsavelId], references: [id], onDelete: Cascade)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}